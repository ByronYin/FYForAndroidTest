<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/btn_test_httpclient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试httpclient"
                />

            <Button
                android:id="@+id/btn_test_json"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试json解析"
                />


            <Button
                android:id="@+id/btn_test_threadpool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="threadpool测试"
                />


        </LinearLayout>

        <Button
            android:id="@+id/btn_test_simplenet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="simplenet测试"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#ccc"
            android:text="进度显示区"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#ccc"
            android:text="测试结果显示区域"
            android:textColor="#000"
            />


        <!-- 下载路径 -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="下载路径"
            />

        <EditText
            android:id="@+id/path"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="http://dlsw.baidu.com/sw-search-sp/soft/7b/33461/freeime.1406862029.exe"
            >

        </EditText>

        <!-- 下载按钮 -->

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下载"
            />

        <!-- 进度条 -->

        <ProgressBar
            android:id="@+id/downloadbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            />

        <TextView
            android:id="@+id/resultView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            />

        <Button
            android:id="@+id/btn_bigimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大图局部加载测试"
            />

        <Button
            android:id="@+id/btn_recycleview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="recycleview测试"
            />


    </LinearLayout>

</ScrollView>
